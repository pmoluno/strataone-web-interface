<section id="access">
    <div class="access-form">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 white-container">
          <div class="container">
              <div class="row">
                <div class="col-12">
                  <div class="container">
                    <div class="container center">
                      <img
                        src="/images/logo.svg"
                        alt=""
                        class="img-fluid medium-logo"
                      />
                      <h2 class="">Sign in to your account</h2>
                      <p class="login-catch-phrase">
                        Access our admin dashboard today!
                      </p>
                      <p class="login-message"></p>
                    </div>
    
                    <form action="/sign-in" method="post">
                      <div class="mb-3">
                        <label for="email">Email</label>
                        <input
                          type="email"
                          name="logemail"
                          id="logemail"
                          placeholder="Email"
                          class="form-control access-input logemail"
                        />
                      </div>
                      <div class="mb-3">
                        <label for="password">Password</label>
                        <input
                          type="password"
                          name="logpassword"
                          id="logpassword"
                          placeholder="*************"
                          class="form-control access-input logpassword"
                        />
                      </div>
                      <div class="form-check mb-3">
                        <div class="row">
                          <div class="col-6">
                            <input
                              class="form-check-input checkWidth extra-small"
                              type="checkbox"
                              id="rememberCheck"
                            />
                            <label
                              class="form-check-label extra-small"
                              for="rememberCheck"
                            >
                              <span class="ps-1">Remember me</span>
                            </label>
                          </div>
                          <div class="col-6 right">
                            <a href="#" class="access-link"> Forgot your password?</a>
                          </div>
                        </div>
                      </div>
                      <button
                        class="sign-in-btn btn btn-secondary btn-style access-btn-style form-control access-btn mb-3"
                      >
                        Sign in
                      </button>
                      <p class="center d-none">Don't have an account? <span><a href="/sign-up" class="access-link"> Sign up</a></span></p>
                    </form>
    
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </section>
  