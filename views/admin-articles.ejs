<div id="content">
    <nav class="navbar navbar-expand-lg navbar-light mb-1">
      <div class="container-fluid">
        <button type="button" id="sidebarCollapse" class="btn sidebar-toggle-btn">
          <i class="fas fa-align-left"></i>
        </button>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-12 mb-5">
          <div class="dashboard-page-name">
          </div>
          <div class="row">
            <div class="col-6">
                <a href="/dashboard/new-article" class="btn btn-secondary btn-style form-control">NEW ARTICLE</a>
            </div>
            <div class="col-6 d-none">
                <a href="" class="btn btn-secondary btn-style form-control">NEW NEWSLETTER</a>
            </div>
          </div>
        </div>
        <div class="col-md-12 mb-5">
            <div class="dashboard-page-name">
              <h2 class="mb-0">List of Articles</h2>
            </div>
            <div class="the-dashboard-snippet-content">
              <% if(allPosts.length > 0 && allPosts.length < 10){ %>
                  <% for(let i = allPosts.length-1; i >= 0; i--){ %>
                    <div class="glass">
                        <div class="row">
                            <div class="col-10">
                                <h3>
                                    <a href="" style="font-size: 12px;"
                                      ><%= allPosts[i].title %></a
                                    >
                                  </h3>
                            </div>
                            <div class="col-2">
                                <div class="row">
                                    <div class="col-6">
                                        <a href="/dashboard/delete-post/<%= allPosts[i].id %>" class="" style="color: red;"><i class="bi bi-trash3-fill"></i></a>
                                    </div>
                                    <div class="col-6">
                                        <a href="/dashboard/articles/edit/<%= allPosts[i].id %>" class="" style="color: black;"><i class="bi bi-pencil-square"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                    </div>
                    <% }}%>
  
  
                    <% if(allPosts.length > 10){ %>
                      <% for(let i = allPosts.length-1; i >= 10; i--){ %>
                        <div class="glass">
                            <div class="row">
                                <div class="col-10">
                                    <h3>
                                        <a href="" style="font-size: 12px;"
                                          ><%= allPosts[i].title %></a
                                        >
                                      </h3>
                                </div>
                                <div class="col-2">
                                    <div class="row">
                                        <div class="col-6">
                                            <a href="" class="" style="color: red;"><i class="bi bi-trash3-fill"></i></a>
                                        </div>
                                        <div class="col-6">
                                            <a href="/dashboard/articles/edit/<%= allPosts[i].id %>" class="" style="color: black;"><i class="bi bi-pencil-square"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                        <% }}%>
                
                <a href="" class="see-more-items">SEE MORE</a>
              </div>
          </div>
          <div class="col-md-12 mb-5 d-none">
            <div class="dashboard-page-name">
              <h2 class="mb-0">List of Anouncement</h2>
            </div>
            <div class="the-dashboard-snippet-content">
                <% for(let i = 0; i < 4; i++){ %>
                <div class="glass">
                    <div class="row">
                        <div class="col-10">
                            <h3>
                                <a href="" style="font-size: 12px;"
                                  >Lorem ipsum dolor, sit amet consectetur adipisicing elit. Et
                                  tempore ratione nobis.</a
                                >
                              </h3>
                        </div>
                        <div class="col-2">
                            <div class="row">
                                <div class="col-6">
                                    <a href="" class="" style="color: red;"><i class="bi bi-trash3-fill"></i></a>
                                </div>
                                <div class="col-6">
                                    <a href="" class="" style="color: black;"><i class="bi bi-pencil-square"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                </div>
                <% } %>
                <a href="" class="see-more-items">SEE MORE</a>
              </div>
          </div>
        
      </div>
    </div>
  </div>
  