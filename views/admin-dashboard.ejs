          <script>
            // Example data (replace this with your actual data)
            const dates = [
              "2024-01-01",
              "2024-01-02",
              "2024-01-03",
              "2024-01-04",
              "2024-01-05",
              "2024-01-06",
              "2024-01-07",
            ];
            const signups = [10, 15, 20, 18, 25, 50, 30];
  
            // Create a new chart context
            const ctx = document.getElementById("myChart").getContext("2d");
  
            // Create the bar chart
            const myChart = new Chart(ctx, {
              type: "bar",
              data: {
                labels: dates,
                datasets: [
                  {
                    label: "Number of Signups",
                    data: signups,
                    backgroundColor: "#F18F01710", // White color with some transparency
                    borderColor: "#F18F017", // White color for border
                    borderWidth: 1,
                  },
                ],
              },
              options: {
                scales: {
                  y: {
                    beginAtZero: true,
                  },
                },
                plugins: {
                  tooltip: {
                    enabled: true, // Disable tooltips
                  },
                  legend: {
                    display: false, // Disable legend
                  },
                },
              },
              width: 400,
              height: 400,
            });
          </script>
